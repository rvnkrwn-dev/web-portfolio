---
import { CONTACT } from "../config/site";
---

<!-- Contact Section -->
<section id="contact" class="contact-gsap">
    <div class="container">
        <div class="contact-content">
            <div class="contact-header">
                <span class="section-label">{CONTACT.sectionLabel}</span>
                <h2 class="section-title">
                    {
                        CONTACT.sectionTitle.map((word) => (
                            <span class="title-word">{word}</span>
                        ))
                    }
                </h2>
                <p class="contact-description">
                    {CONTACT.description}
                </p>
            </div>

            <div class="contact-methods">
                {
                    CONTACT.methods.map((method) => (
                        <a
                            href={method.link || "#"}
                            target={method.link ? "_blank" : "_self"}
                            rel={
                                method.link ? "noopener noreferrer" : undefined
                            }
                            class={`contact-card magnetic-contact ${!method.link ? "disabled" : ""}`}
                            aria-disabled={!method.link}
                        >
                            <div class="contact-icon">
                                {method.icon === "email" && (
                                    <svg
                                        width="32"
                                        height="32"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                    >
                                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                                        <polyline points="22,6 12,13 2,6" />
                                    </svg>
                                )}
                                {method.icon === "github" && (
                                    <svg
                                        width="32"
                                        height="32"
                                        viewBox="0 0 24 24"
                                        fill="currentColor"
                                    >
